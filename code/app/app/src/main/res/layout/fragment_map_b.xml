<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.mariocabrera.seniordesign.AccountFragment"
    android:background="?attr/backgroundColor">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeMapB"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="?attr/cardBackground"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/numSpotsBTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Lot Name"
                        android:textColor="?attr/textColor"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/NumSpotsB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Details"
                        android:textColor="?attr/textColor"
                        android:textSize="20dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_centerHorizontal="true"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!--"You're Parked In" text-->

            <android.support.v7.widget.CardView
                android:id="@+id/userCardB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="@color/colorLightBlue"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/curLotBTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="default"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/LotB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users' Lot Name"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SpotB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="User's Current Spot"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--<Button-->
                <!--android:id="@+id/btn1B"-->
                <!--android:text="here"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>