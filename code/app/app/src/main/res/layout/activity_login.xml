        <!--android:id="@+id/button"-->
        <!--style="?android:textAppearanceSmall"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:text="Button"-->
        <!--android:textStyle="bold" />-->
    <!---->


</LinearLayout>


